{{!-- WHEN I click on an existing blog post
THEN I am presented with the post title, contents, post creatorâ€™s username, 
and date created for that post and have the option to leave a comment --}}

{{!-- BLOG POST TEMPLATE --}}
<div class="text-center">

    <div class="message is-info">

    <div>

        <h2 class="message-header title is-4">{{title}}</h2>

    </div>
    <p class="message-body block">{{content}}</p>
    <p class="subtitle is-6">Created by <span class="created-by">{{user.username}}</span> on {{format_date date_created}}</p>
    

    </div>

{{#each comments as |comment|}}

{{!-- PREVIOUS COMMENT CARD TEMPLATE --}}
<div class="card text-white bg-secondary w-50 mx-auto border-secondary m-3 ">
    <div class="card-body">
        <p class="card-text block">{{comment.comment}}</p>
        <h5 class="card-title">{{user.username}} on {{format_date createdAt}}</h5>
    </div>
</div>
{{/each}}

    <h4 class="block">Leave a Comment!</h4>

{{!-- LEAVE A NEW COMMENT TEMPLATE --}}
    <form class="form new-comment-form">
        <div class="form-group">
            <label for="comment-content">Write your comment:</label>
            <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
        </div>
        <div class="form-group mx-auto">
            <button type="submit" class="button is-info">Add</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>