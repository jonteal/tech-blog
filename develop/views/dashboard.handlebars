<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-post-form box">
            <div>
                <label for="post-title">Post Title</label>
                <input class="form-input input is-rounded" type="text" id="post-title" name="post-title" placeholder="post title"/>
            </div>
            <div class="form-group control">
                <label for="post-desc">Description:</label>
                <textarea class="form-input textarea is-focused" id="post-desc" name="post-desc" placeholder="what do you want to share today?"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="button is-info">Create!</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6">
        <h3>Your Posts</h3>

        {{#each posts as |post|}}
        <div class="row mb-2 card">
            <div class="col-md-8">
                <h4><a class="post-title" href='/post/{{post.id}}'>{{post.title}}</a></h4>
            </div>
            {{!-- <div>
                <button class="editBtn" data-id="{{post.id}}">Edit</button>
            </div> --}}
            <div class="col-md-4">
                <button class="button is-danger is-outlined post-list" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/post.js"></script>